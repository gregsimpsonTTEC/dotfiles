#!/bin/sh

set -e

if [ ! $(which brew) ]; then
  echo "[dotfiles] Installing homebrew..."
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

echo "[dotfiles] Installing dependencies via Homebrew..."
brew bundle

if [ ! -d "$HOME/.oh-my-zsh" ]; then
  echo "[dotfiles] Installing oh-my-zsh..."
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
fi

echo "[dotfiles] Linking dotfiles..."
ln -s $(pwd)/git ~/.gitconfig
ln -s $(pwd)/gitignore ~/.gitignore_global
ln -s $(pwd)/vim ~/.vimrc
ln -s $(pwd)/zsh ~/.zshrc
ln -s $(pwd)/gem ~/.gemrc
ln -s $(pwd)/pry ~/.pryrc
ln -s $(pwd)/rvm ~/.rvmrc
ln -s $(pwd)/ignore ~/.ignore
ln -s $(pwd)/spring ~/.spring.rb
ln -s $(pwd)/speric.zsh-theme ~/.oh-my-zsh/themes/speric.zsh-theme

echo "[dotfiles] Installing vim plug..."
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

echo "[dotfiles] Downloading vim color themes..."
mkdir ~/.vim/colors
(cd ~/.vim/colors && wget https://raw.githubusercontent.com/chriskempson/tomorrow-theme/master/vim/colors/Tomorrow-Night.vim)
(cd ~/.vim/colors && wget https://raw.githubusercontent.com/chriskempson/tomorrow-theme/master/vim/colors/Tomorrow.vim)

echo "[dotfiles] Done!"
