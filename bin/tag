# !/bin/sh
# Usage: tag
# Generate ctags but exclude sub-directories I don't care about

ctags -R \
  --exclude=.git \
  --exclude=app/assets/javascripts \
  --exclude=app/views \
  --exclude=artifacts \
  --exclude=db \
  --exclude=frontend \
  --exclude=lib/console \
  --exclude=log \
  --exclude=spec \
  --exclude=tmp \
  --exclude=vendor \
  --exclude=public \
  .
